<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Donation">
        <activity android:name=".accept_request"></activity>
        <activity android:name=".decline_request" />
        <activity android:name=".decline" />
        <activity
            android:name=".user1"
            android:label="@string/title_activity_user1"
            android:theme="@style/Theme.Donation.NoActionBar" />
        <activity android:name=".donation_requests" />
        <activity android:name=".receiver_main" />
        <activity android:name=".donor_main" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>